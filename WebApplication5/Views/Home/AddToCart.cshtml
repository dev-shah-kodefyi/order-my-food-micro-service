@model IEnumerable<WebApplication5.Models.FoodMenu>

@{
    ViewData["Title"] = "MenuDetails";
}

<h2>MenuDetails</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <script src="~/js/JavaScript.js"></script>

</head>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FoodId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.units)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>

                @*<td>
                        <input type="text" name="restId" id="restId" value="@ViewBag.id" hidden />

                    </td>*@
                <td>
                    <input type="text" name="foodId" id="foodId" value="@item.FoodId" />

                </td>
                <td>
                    <input type="text" name="foodname" id="foodname" value="@item.FoodName" />

                </td>
                <td>
                    <input type="text" name="price" id="price" value="@item.Price" />

                </td>


                <td>

                    <div class="quantity">

                        <button class="minus-btn" id="subs" type="button" name="button" value="-" onclick="subst()">
                            -
                        </button>
                        <input type="text" name="units" id="units" value="" />

                        <button class="plus-btn" id="plus" type="button" name="button" value="+" onclick="add()">
                            +
                        </button>

                        <button id="btnGet" type="submit" formaction="/home/AddedToCart">
                            Add
                        </button>

                    </div>



                </td>
            </tr>
        }
    </tbody>
</table>


